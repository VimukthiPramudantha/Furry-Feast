<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/backimg">

    <!-- Header Section -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Educational Content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Guide to Dog Nutrition & Care"
        android:textSize="16sp"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textColor="#666666" />

    <EditText
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitle"
        android:layout_marginTop="16dp"
        android:hint="Search for topics..."
        android:padding="12dp"
        android:background="@drawable/search_bar_background"
        android:drawableLeft="@drawable/ic_search"
        android:textColor="#333333"
        android:textSize="16sp" />

    <!-- Categories Section -->
    <HorizontalScrollView
        android:id="@+id/categories_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_bar"
        android:layout_marginTop="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Dog Breeds"
                android:background="@drawable/category_button_background"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Nutrition Tips"
                android:background="@drawable/category_button_background"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Life Stages"
                android:background="@drawable/category_button_background"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health & Wellness"
                android:background="@drawable/category_button_background"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Articles/Guides Section -->
    <LinearLayout
        android:id="@+id/articles_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/categories_section"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/article_thumbnail_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/article_thumbnail"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/article_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/article_thumbnail_1"
                android:layout_marginStart="16dp"
                android:text="Understanding Dog Nutrition"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/article_desc_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/article_thumbnail_1"
                android:layout_below="@id/article_title_1"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="Learn the basics of dog nutrition..."
                android:textSize="14sp"
                android:textColor="#666666" />

            <Button
                android:id="@+id/read_more_button_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Read More"
                android:background="@drawable/read_more_button_background"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

        <!-- Repeat RelativeLayout block for more articles as needed -->

    </LinearLayout>

    <!-- Videos Section -->
    <TextView
        android:id="@+id/videos_section_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/articles_section"
        android:layout_marginTop="24dp"
        android:text="Videos"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333" />

    <HorizontalScrollView
        android:id="@+id/videos_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/videos_section_title"
        android:layout_marginTop="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/video_thumbnail_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/video_thumbnail"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/play_icon_1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_play"
                    android:background="@drawable/play_icon_background" />
            </RelativeLayout>

            <!-- Repeat RelativeLayout block for more videos as needed -->

        </LinearLayout>
    </HorizontalScrollView>

    <!-- Footer Section -->
    <LinearLayout
        android:id="@+id/footer_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Popular Tags:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <!-- Example Tags -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Diet"
                android:textSize="16sp"
                android:textColor="#666666" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Exercise"
                android:textSize="16sp"
                android:textColor="#666666" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supplements"
                android:textSize="16sp"
                android:textColor="#666666" />

        </LinearLayout>

        <Button
            android:id="@+id/newsletter_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Sign Up for Newsletter"
            android:background="@drawable/newsletter_button_background"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <!-- Example Social Media Icons -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_facebook" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"

