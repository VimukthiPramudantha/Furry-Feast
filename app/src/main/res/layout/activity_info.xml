<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".InfoActivity">

    <!-- Title of the Educational Content -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Educational Content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- ScrollView to contain the educational content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:padding="16dp">

        <!-- LinearLayout to hold the educational content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Example ImageView for content illustration -->
            <ImageView
                android:id="@+id/educational_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_launcher_background"
                android:contentDescription="Educational Image"
                android:scaleType="centerCrop"
                android:layout_marginBottom="16dp" />

            <!-- Example TextView for content description -->
            <TextView
                android:id="@+id/educational_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is an example of educational content. You can replace this text with actual educational information."
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp" />

            <!-- Additional content can be added here -->

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/footer_shadow">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_marginBottom="3dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/homeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Home"
            android:layout_weight="1"
            android:backgroundTint="#c8d6e5"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/cartBtn"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#c8d6e5"
            android:textColor="@color/black"
            android:text="Cart" />
        <Button
            android:id="@+id/eduBtn"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#c8d6e5"
            android:textColor="@color/black"
            android:text="Info" />
        <Button
            android:id="@+id/profileBtn"
            android:backgroundTint="#c8d6e5"
            android:textColor="@color/black"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Profile" />
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
